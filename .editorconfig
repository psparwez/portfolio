# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

max_line_length = 100

# Markdown and MDX: keep trailing whitespace (used for line breaks)
[*.{md,mdx}]
trim_trailing_whitespace = false

# JSON, YAML, and config files
[*.{json,jsonc,yml,yaml}]
indent_size = 2

[*.{html,css,scss,js,jsx,ts,tsx}]
indent_size = 2
indent_style = space

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72
